
/**
 * @fileoverview Firestore Security Rules for the Thread Canvas e-commerce application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for all user-related data,
 * while allowing public read access to the product catalog. An admin role is
 * defined to allow for content management. Path-based ownership is the primary
 * means of access control for user data, avoiding costly `get()` calls within rules.
 *
 * Data Structure:
 * - `/products/{productId}`: Public product catalog.
 * - `/users/{userId}`: User profiles, accessible only by the user.
 * - `/users/{userId}/...`: Various user-specific subcollections.
 *
 * Key Security Decisions:
 * - Users can only access their own data.
 * - The product catalog is publicly readable.
 * - An admin user (defined by UID) has special privileges for content management.
 * - Data validation is limited to ownership checks and relational integrity.
 *
 * Denormalization for Authorization:
 *  - Path-based ownership eliminates the need to denormalize user IDs onto subcollection documents. The path `/users/{userId}/...` inherently signifies ownership.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows public read access to product information. Only admins can create, update, or delete products.
     * @path /products/{productId}
     * @allow get, list: if true;
     * @allow create, update, delete: if isAdmin();
     * @principle Allows public read access with admin-only writes for product catalog.
     */
    match /products/{productId} {
      allow get: if true;
      allow list: if true;
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    /**
     * @description Allows a user to read, update, and delete their own user document. Admins can list all users.
     * @path /users/{userId}
     * @allow get, list: if isOwner(userId) || isAdmin();
     * @allow create: if request.auth.uid == userId;
     * @allow update: if isExistingOwner(userId);
     * @allow delete: if isExistingOwner(userId);
     * @principle Enforces document ownership for all operations, with admin override for listing.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if isAdmin();
      allow create: if request.auth.uid == userId;
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Allows a user to manage their own addresses.
     * @path /users/{userId}/addresses/{addressId}
     * @allow get, list: if isOwner(userId);
     * @allow create: if isOwner(userId) && request.resource.data.userId == userId;
     * @allow update: if isExistingOwner(userId) && resource.data.userId == userId;
     * @allow delete: if isExistingOwner(userId) && resource.data.userId == userId;
     * @principle Enforces document ownership for writes and relational integrity.
     */
    match /users/{userId}/addresses/{addressId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && resource.data.userId == userId;
      allow delete: if isExistingOwner(userId) && resource.data.userId == userId;
    }

    /**
     * @description Allows a user to manage their own payment methods.
     * @path /users/{userId}/paymentMethods/{paymentMethodId}
     * @allow get, list: if isOwner(userId);
     * @allow create: if isOwner(userId) && request.resource.data.userId == userId;
     * @allow update: if isExistingOwner(userId) && resource.data.userId == userId;
     * @allow delete: if isExistingOwner(userId) && resource.data.userId == userId;
     * @principle Enforces document ownership for writes and relational integrity.
     */
    match /users/{userId}/paymentMethods/{paymentMethodId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && resource.data.userId == userId;
      allow delete: if isExistingOwner(userId) && resource.data.userId == userId;
    }

    /**
     * @description Allows a user to manage their own orders, and admins to read them.
     * @path /users/{userId}/orders/{orderId}
     * @allow get, list: if isOwner(userId) || isAdmin();
     * @allow create: if isOwner(userId) && request.resource.data.userId == userId;
     * @allow update: if isExistingOwner(userId) && resource.data.userId == userId;
     * @allow delete: if isExistingOwner(userId) && resource.data.userId == userId;
     * @principle Enforces document ownership for writes and relational integrity, with admin read override.
     */
    match /users/{userId}/orders/{orderId} {
      allow get, list: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && resource.data.userId == userId;
      allow delete: if isExistingOwner(userId) && resource.data.userId == userId;
    }

    /**
     * @description Allows a user to manage items within their own orders.
     * @path /users/{userId}/orders/{orderId}/orderItems/{orderItemId}
     * @allow get, list: if isOwner(userId);
     * @allow create: if isOwner(userId) && request.resource.data.orderId == orderId;
     * @allow update: if isExistingOwner(userId) && resource.data.orderId == resource.data.orderId;
     * @allow delete: if isExistingOwner(userId) && resource.data.orderId == resource.data.orderId;
     * @principle Enforces document ownership for writes and relational integrity.
     */
    match /users/{userId}/orders/{orderId}/orderItems/{orderItemId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.orderId == orderId;
      allow update: if isExistingOwner(userId) && resource.data.orderId == resource.data.orderId;
      allow delete: if isExistingOwner(userId) && resource.data.orderId == resource.data.orderId;
    }

    /**
     * @description Allows a user to manage their own recommendations.
     * @path /users/{userId}/recommendations/{recommendationId}
     * @allow get, list: if isOwner(userId);
     * @allow create: if isOwner(userId) && request.resource.data.userId == userId;
     * @allow update: if isExistingOwner(userId) && resource.data.userId == userId;
     * @allow delete: if isExistingOwner(userId) && resource.data.userId == userId;
     * @principle Enforces document ownership for writes and relational integrity.
     */
    match /users/{userId}/recommendations/{recommendationId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && resource.data.userId == userId;
      allow delete: if isExistingOwner(userId) && resource.data.userId == userId;
    }

    /**
     * @description Allows a user to manage their own cart.
     * @path /users/{userId}/cart
     * @allow get, list: if isOwner(userId);
     * @allow create: if isOwner(userId) && request.resource.data.userId == userId;
     * @allow update: if isExistingOwner(userId) && resource.data.userId == userId;
     * @allow delete: if isExistingOwner(userId) && resource.data.userId == userId;
     * @principle Enforces document ownership for writes and relational integrity.
     */
    match /users/{userId}/cart {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && resource.data.userId == userId;
      allow delete: if isExistingOwner(userId) && resource.data.userId == userId;
    }
    
     /**
     * @description Allows a user to manage items in their own cart.
     * @path /users/{userId}/cart/cartItems/{cartItemId}
     * @allow get, list: if isOwner(userId);
     * @allow create: if isOwner(userId) && request.resource.data.cartId == parentPathSegment();
     * @allow update: if isExistingOwner(userId) && resource.data.cartId == parentPathSegment();
     * @allow delete: if isExistingOwner(userId) && resource.data.cartId == parentPathSegment();
     * @principle Enforces document ownership for writes and relational integrity.
     */
    match /users/{userId}/cart/cartItems/{cartItemId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.cartId == parentPathSegment();
      allow update: if isExistingOwner(userId) && resource.data.cartId == parentPathSegment();
      allow delete: if isExistingOwner(userId) && resource.data.cartId == parentPathSegment();
    }

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    function isAdmin() {
      // For now, we will use a specific UID as the admin.
      // In a real app, you might use custom claims or a roles collection.
      return request.auth.uid == "pXoTol5xMwMPe8nxAXat5Ozpuxt1";
    }

    function parentPathSegment() {
      return request.path.split("/")[6];
    }
  }
}
